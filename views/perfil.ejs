<% if (login) { %>       
<!doctype html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Frist App Nodejs of Apofis">
    <meta name="author" content="Kuroi Thanks to Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <title>Apofis</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/cover/">

    <!-- Bootstrap core CSS -->
    <link href="resources/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="resources/css/cover.css" rel="stylesheet">
    <link href="resources/css/login.css" rel="stylesheet">
    <link href="resources/css/font.css" rel="stylesheet">
    <link href="resources/css/css-button.css" rel="stylesheet">

    
    <link rel="icon" class="js-site-favicon" type="image/svg+xml" href="resources/img/logo/LOGO-LOGO-NEGRO.svg">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@latest/dist/Chart.min.js"></script>
</head>
<body>
  <div id="main-planes">
    <div id="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="">
            <strong><%= name %></strong>
            <strong><%= email %></strong>
            <strong><%= user %></strong>
           

            <form class="form-horizontal" id="" action="/perfil"  method="POST" enctype="multipart/form-data" >
                <div id="cantacto">
                    <legend class="fw-small title1">Datos personales</legend>

                    <div class="form-group" id="espacio">
                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                        <div>
                            <input type="text" class="form-control" name="user_full" id="user_full" placeholder="Nombre Completo"  placeholder="Nombre Completo">
                        </div>
                    </div>

                    <div class="form-group" id="espacio">
                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                        <div>
                            <input type="text" class="form-control" name="phone" id="phone" placeholder="Telefono"  placeholder="phone">
                        </div>
                    </div>

                    <div class="form-group" id="espacio">
                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                        <div>
                            <input type="text" class="form-control" name="adress" id="adress" placeholder="Direccion"  placeholder="adress">
                        </div>
                    </div>
                   
                    <div class="form-group" id="espacio">
                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                        <div >
                            <input type="file" class="form-control" name="img" id="img" placeholder="img"  placeholder="img">
                        </div>
                    </div>


                    <div class="form-group" id="espacio-btn">
                        <div class=" text-center">
                            <button id="" class="button"  type="submit" >Guardar</button>
                        </div>
                        <div class=" text-center">
                            <a type="button" href="login" class="button">Volver</a>
                        </div>
                    </div>
                </div>
            </form>               
            


        <% if(typeof alert != "undefined") { %>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text:'<%= alertMenssage %>',
                    icon:'<%= alertIcon %>',
                    showConfirmButton:<%= showConfirmButton %>,
                    timer:<%= timer %>,
                    heightAuto:false
                }).then(()=>{
                    window.location='/ <%= ruta %>'
                })
            </script>
        <% } %>    
    </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>
<%} else { %>
  
    <script>
  
      window.location="404.html";
  
    </script>
  
  <%} %>
  